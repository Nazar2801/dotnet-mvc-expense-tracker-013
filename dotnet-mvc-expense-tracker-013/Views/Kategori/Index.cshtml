@model IEnumerable<dotnet_mvc_expense_tracker.Models.Kategori>

<h2>Master Data Kategori</h2>
<a asp-action="Create" class="btn btn-primary">Tambah Kategori</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Tipe</th>
            <th>Nama</th>
            <th>Deskripsi</th>
            <th>Status</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Tipe</td>
                <td>@item.Nama</td>
                <td>@item.Deskripsi</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Lihat</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>
